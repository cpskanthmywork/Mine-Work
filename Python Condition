name = input("Wht is your Name? ")
if name =="Srikanth":
    print("Hello, Nice to meet you {}".format(name))
elif name == "Nayana":
    print("Nice to see you {}".format(name))
elif name == "Prabhakar":
    print("You are so sweet")
elif name != "Hari":
    print("You're not match with the DB {}, please check again".format(name))
else:
    print("You are the wrong person {}, Please Try Again".format(name))


